<Window x:Class="MSSA_FINAL_PROJECT_WORKING.RunSimulationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSSA_FINAL_PROJECT_WORKING"
        mc:Ignorable="d"
         Title="Run Simulation" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Simulation Time (days)"/>
            <TextBox x:Name="SimulationTimeTextBox"/>
            <Label Content="Time Step (hours)"/>
            <TextBox x:Name="TimeStepTextBox"/>
            <Button Content="Run" Click="RunButton_Click"/>
        </StackPanel>
    </Grid>
</Window>