<Window x:Class="MSSA_FINAL_PROJECT_WORKING.AnimationWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="3D Plot Test" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="PauseButton" Content="Pause" Click="PauseButton_Click" Margin="5" />
            <Button x:Name="ResumeButton" Content="Resume" Click="ResumeButton_Click" Margin="5" />
            <TextBlock Text="Speed:" VerticalAlignment="Center" Margin="10,0,0,0" />
            <Slider x:Name="SpeedSlider" Minimum="0.1" Maximum="5.0" Value="1.0" Width="100" ValueChanged="SpeedSlider_ValueChanged" Margin="5" />
        </StackPanel>
        <Grid x:Name="MainGrid" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10,50,10,10">
            <TextBlock x:Name="ElapsedTimeTextBlock" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10" />
        </Grid>
    </Grid>
</Window>