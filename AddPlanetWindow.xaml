<Window x:Class="MSSA_FINAL_PROJECT_WORKING.AddPlanetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSSA_FINAL_PROJECT_WORKING"
        mc:Ignorable="d"
        Title="Add Planet" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Planet Name"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <Label Content="Color"/>
            <ComboBox x:Name="ColorComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="Red"/>
                <ComboBoxItem Content="Green"/>
                <ComboBoxItem Content="Blue"/>
                <ComboBoxItem Content="Yellow"/>
                <ComboBoxItem Content="Orange"/>
                <ComboBoxItem Content="Purple"/>
                <ComboBoxItem Content="Brown"/>
                <ComboBoxItem Content="Gray"/>
                <ComboBoxItem Content="Black"/>
                <ComboBoxItem Content="White"/>
            </ComboBox>

            <Label Content="X Position (AU)"/>
            <TextBox x:Name="XPosTextBox" Margin="0,0,0,10"/>

            <Label Content="Y Position (AU)"/>
            <TextBox x:Name="YPosTextBox" Margin="0,0,0,10"/>

            <Label Content="Z Position (AU)"/>
            <TextBox x:Name="ZPosTextBox" Margin="0,0,0,10"/>

            <Label Content="X Velocity (KM/H)"/>
            <TextBox x:Name="XVelTextBox" Margin="0,0,0,10"/>

            <Label Content="Y Velocity (KM/H)"/>
            <TextBox x:Name="YVelTextBox" Margin="0,0,0,10"/>

            <Label Content="Z Velocity (KM/H)"/>
            <TextBox x:Name="ZVelTextBox" Margin="0,0,0,10"/>

            <Label Content="Mass (Earth Mass)"/>
            <TextBox x:Name="MassTextBox" Margin="0,0,0,10"/>

            <Button Content="Add" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
